@model IEnumerable<BPNFE.MVC.ViewModels.UsuarioViewModel>

@{
    ViewBag.Title = "Usuário(s)";
    Layout = "~/Views/Shared/_LayoutInternaIndex.cshtml";
}

<h2>Usuário(s)</h2>
<button class="btn btn-info btn-icon">
    <i class="fa-cloud"></i>
    <span>
        <a href="@Url.Action("Criar", "Criar")" style="color: white">Criar</a>
    </span>
</button>

<div class="col-sm-6 col-lg-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Senha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sobrenome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ativo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Administrador)
                </th>
                <th>
                    Opções
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Senha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sobrenome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Administrador)
                    </td>
                    <td>
                        <button type="button" class="btn btn-success">
                            <a href="@Url.Action("Editar", "Edit")" style="color: white">Editar</a>
                        </button>
                        <button type="button" class="btn btn-warning">
                            <a href="@Url.Action("Detalhes", "Details")" style="color: white">Detalhes</a>
                        </button>
                        <button type="button" class="btn btn-danger">
                            <a href="@Url.Action("Excluir", "Delete")" style="color: white">Excluir</a>
                        </button>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>
